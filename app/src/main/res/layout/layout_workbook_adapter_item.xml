<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="6dp"
    android:layout_marginBottom="3dp"
    >

    <RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/rtlListItem"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="5dp">

        <com.mahta.rastin.broadcastapplication.custom.TextViewPlus
            android:id="@+id/txtLesson"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:fontTextView="shabnam_bold.ttf"
            android:layout_toRightOf="@+id/txtGrade"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <com.mahta.rastin.broadcastapplication.custom.TextViewPlus
            android:id="@+id/txtGrade"
            android:background="@drawable/shape_circle_grade"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:fontTextView="shabnam_bold.ttf"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>

